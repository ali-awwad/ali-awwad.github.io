---
// Hero section for the main landing page
import { Image } from 'astro:assets';
---

<section class="min-h-screen relative overflow-hidden flex items-center justify-center py-20">
  <!-- Background elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-white to-indigo-50 dark:from-gray-900 dark:via-gray-800 dark:to-indigo-950 z-0"></div>
  
  <!-- Abstract geometric shapes for visual interest -->
  <div class="absolute top-20 right-10 w-72 h-72 bg-blue-200/30 dark:bg-blue-700/10 rounded-full filter blur-3xl"></div>
  <div class="absolute bottom-20 left-10 w-80 h-80 bg-indigo-200/40 dark:bg-indigo-700/10 rounded-full filter blur-3xl"></div>
  
  <!-- Animated dots pattern (optional) -->
  <div class="absolute inset-0 opacity-20 dark:opacity-10 z-0" aria-hidden="true" 
       style="background-image: radial-gradient(#4338ca 0.5px, transparent 0.5px); background-size: 16px 16px;"></div>
  
  <div class="relative z-10 text-center px-4 md:px-8 max-w-4xl">
    <div class="inline-block mb-6 p-1 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full">
      <!-- Placeholder for profile image - replace with your own -->
      <div class="w-32 h-32 rounded-full bg-white dark:bg-gray-800 border-4 border-white dark:border-gray-800 flex items-center justify-center">
        <span class="text-4xl font-bold text-blue-600 dark:text-blue-400">AA</span>
        <!-- Alternatively, use a real image:
        <Image src="/path/to/profile.jpg" alt="Ali Awwad" width={128} height={128} class="rounded-full" />
        -->
      </div>
    </div>
    
    <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600 dark:from-blue-400 dark:to-indigo-300">
      Ali Awwad
    </h1>
    
    <h2 class="text-2xl md:text-3xl font-medium mb-8 text-gray-700 dark:text-gray-300">
      <span class="relative inline-block px-2">
        <span class="absolute inset-0 transform -skew-x-12 bg-blue-100 dark:bg-blue-900/30 rounded"></span>
        <span class="relative">Lead Developer</span>
      </span>
      &nbsp;&amp;&nbsp;
      <span class="relative inline-block px-2">
        <span class="absolute inset-0 transform -skew-x-12 bg-indigo-100 dark:bg-indigo-900/30 rounded"></span>
        <span class="relative">Full Stack Engineer</span>
      </span>
    </h2>
    
    <p class="text-xl mb-10 text-gray-600 dark:text-gray-400 max-w-2xl mx-auto leading-relaxed">
      Building high-performing teams and creating <span class="italic">elegant solutions</span> for enterprise-level applications with <span class="font-semibold">13 years</span> of experience.
    </p>
    
    <div class="flex flex-wrap justify-center gap-6">
      <a href="#contact" class="group relative inline-flex items-center justify-center px-8 py-3.5 font-bold text-white transition-all duration-300 ease-in-out rounded-full overflow-hidden bg-gradient-to-br from-blue-600 to-indigo-600 hover:from-indigo-600 hover:to-purple-600 shadow-lg hover:shadow-indigo-500/30 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transform hover:scale-105">
        <span class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-blue-400/20 to-indigo-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
        <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span class="relative">Get in Touch</span>
      </a>
      
      <a href="/blog" class="group relative inline-flex items-center justify-center px-8 py-3.5 font-bold text-gray-800 dark:text-gray-200 transition-all duration-300 ease-in-out rounded-full overflow-hidden bg-white dark:bg-gray-800 border-2 border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-500 shadow-lg hover:shadow-blue-200/30 dark:hover:shadow-blue-900/20 focus:outline-none transform hover:scale-105">
        <svg class="w-5 h-5 mr-2 text-blue-600 dark:text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
        </svg>
        <span class="relative">Read My Blog</span>
      </a>
    </div>
  </div>
</section>
